html, body
  font-family Montserrat,-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Apple Color Emoji,Arial,sans-serif,Segoe UI Emoji,Segoe UI Symbol

.home .hero
  margin-top 2.5rem
  display flex
  flex-direction column
  align-items center
  justify-content center
  min-height 600px
  background linear-gradient(to bottom right,rgba(16,1,36,.8),rgba(56,118,245,.8)),url(/index-img.jpg) 50% no-repeat
  background-size cover
  h1, p
    color white!important


.home .hero img
  max-width 90px!important
  stroke white

.home .hero h1, .home .hero .description, .home .hero .action
  margin: 1rem auto!important
